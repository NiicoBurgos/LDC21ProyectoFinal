DIVISORES macro num,divisor
local dividir,continuar,numprimo,fin
		push ax
		push bx
		push dx
		
		sub dx,dx
		mov ax,num
		mov bx,2
		div bx
		mov mitad,ax
		sub dx,dx
		sub ax,ax
		mov ax,num
		mov bx,1
		mov divisor,bx		
;se muestra el 1 que es divisor universal de todos los numeros		
		NUMCAD divisor,auxcaddiv
		INVERSA auxcaddiv
		ESCRIBE auxcaddiv
;como ya se evalu√≥ si era primo en la opcion 2 comparo la variable primo para evitar volver a recorrer el numero
		cmp primo,1
		je numprimo		
dividir:sub ax,ax
		sub dx,dx
		mov ax,num		
		div bx                               
		cmp dx,0
		jne continuar
		mov divisor,bx
        ESPRIMO divisor
        cmp primo,1
        je continuar
		ESCRIBE coma
		NUMCAD divisor,auxcaddiv
		INVERSA auxcaddiv
		ESCRIBE auxcaddiv		
continuar:	
        inc bx
        cmp bx,mitad
        jle dividir		
		ESCRIBE coma
		NUMCAD num,auxcaddiv
		INVERSA auxcaddiv
		ESCRIBE auxcaddiv
		jmp fin
numprimo:	
		ESCRIBE esNumeroPrimo
		ESCRIBE espacioBlanco
fin:		
		pop dx
		pop bx
		pop ax
endm

;Verificar si un numero es primos
ESPRIMO macro num 
local repetir, prim,noprim,terminar
        push ax
        push bx
        push dx 
        mov bx,num
        dec bx
repetir:
        sub ax,ax 
        sub dx,dx       
        mov ax,num
        dec bx
        cmp bx,1
        jle prim
        div bx
        cmp dx,0
        je noprim
        jmp repetir
prim:    
;= 1 es primo
        mov primo,1
        jmp terminar
noprim:     
;= 0 no es primo
        mov primo,0
terminar:                 
        pop dx
        pop bx
        pop ax
endm  


;Obtener factores primos
FACTORES macro num  
local numprimo,reset,mientras,nodivisor,fin,saltar,nopri,volv,cero    
        push ax
        push bx 
        push dx
		cmp num,0
		je cero
        mov acc,1
        mov bx,2  
		mov auxcoma,0		
		ESCRIBE factoresPrimos
		NUMCAD num,auxcadprim
        INVERSA auxcadprim 
        ESCRIBE auxcadprim
		ESCRIBE dospuntos
		cmp numero,1
		je numprimo
reset:	
        sub dl,dl	
        mov ax,num		
        cmp bx,num
        je numprimo	
mientras: 
        mov dx,acc
        cmp num,dx
        je fin 
        sub dx,dx       
        div bx
        cmp dx,0
        jne nodivisor 
        mov aux,bx  
        ESPRIMO aux
        cmp primo,1
        jne nodivisor        
        cmp auxcoma,0
		je saltar
		ESCRIBE coma 
		mov primo,0		
 saltar:   
        mov auxprim,ax
        mov ax,acc
        mul bx
        NUMCAD aux,auxcadprim
        INVERSA auxcadprim
        ESCRIBE auxcadprim
        mov acc,ax
        inc auxcoma  
        mov ax,auxprim
		sub dx,dx
        jmp mientras         
nodivisor:
        inc bx
        jmp reset    
numprimo:
		mov primo,1
		NUMCAD num,auxcadprim
		INVERSA auxcadprim
		ESCRIBE auxcadprim
		ESCRIBE esNumeroPrimo
		ESCRIBE espacioBlanco
		jmp fin
cero:
		ESCRIBE ceroPrimo
fin:     
		pop dx
        pop bx
        pop ax
endm


;Invertir cadena
INVERSA macro cad 
local salto,fin     
   push ax 
   push di
   push si   
   longitud cad,long 
   mov di,long
   dec di
   sub si,si 
salto:
   cmp di,si
   jle fin 
   mov al,cad[si]    
   mov ah,cad[di] 
   mov cad[si],ah 
   mov cad[di],al
   inc si
   dec di
   jmp salto
fin:       		
   pop si
   pop di
   pop ax 
endm 


