;Convertir cadena a numero
CADNUM macro cad,num 
local multi,finconv 
        push ax
        push bx
		push dx
		push si
		mov num,0
		longitud cadena,long
		mov si,long 
	    dec si			
        sub bx,bx
        mov bx,1 
 multi: 
		sub ax,ax
		sub dx,dx
        mov al,cadena[si]    
		sub al,48		
        mul bx      
        add num,ax
        mov ax,bx
        mov bx,10
		mul bx
        mov bx,ax  
        cmp si,0
        je finconv   
        dec si  
        jmp multi                  
finconv:
		pop si
		pop dx	
		pop bx
        pop ax    
endm


;Convertir un numero a una cadena
NUMCAD macro num,cad
local dividir
        push ax
        push bx
        push si 
		push dx		
        sub si,si   
        sub ax,ax
        sub bx,bx 
        mov ax,num
        mov bx,10            
dividir:
		sub dx,dx
		div bx                               
        add dl,48
        mov cad[si],dl
        inc si 
        cmp ax,0
        jne dividir 
		mov cad[si],'$'
        pop dx
 	    pop si
        pop bx
        pop ax
endm

